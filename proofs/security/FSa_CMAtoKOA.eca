lemma FSabort_bound &m : 
   Pr [ EF_CMA_RO(IDS_Sig(P, V), A, RO, O_CMA_Default).main() @ &m : res] 
<= Pr [ EF_KOA_RO(IDS_Sig(P,V),RedKOA(A,Sim),RO).main() @ &m : res ] 
 + reprog_bound + dlt.
proof.
rewrite hop1.
apply (ler_trans _ _ _ (hop4 &m) _); rewrite !ler_add2r.
rewrite hop5 hop6. 
exact KOA_bound.
qed.

