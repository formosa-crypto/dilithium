local lemma pr_body2 x &m sk :
  OLeft.sk{m} = sk =>
  Pr[LoopBody2.main() @ &m : res = x] = mu1 (dWCoZ sk) x.
proof.
move => *.
have <- : Pr[LoopBody1.main() @ &m : res = x] = Pr[LoopBody2.main() @ &m : res = x].
  byequiv.
