local module OLeft_move_reprog : Oracle_i = {
  include var OLeft[init, h]

  proc sign(m: M) = {
    var w, c, z, f, i;

    (* Silences unused variables warning *)
    w <- witness;
    c <- witness;
    z <- witness;

    i <- 0;
    f <- false;
    while(!f /\ i < kappa) {
      f <$ dbiased (p_acc sk);
      z <- witness;
      if(f) {
        (w, c, z) <$ dWCZ_acc sk;
        RO.set((w, m), c);
      }
      else {
        (w, c) <$ dWC_rej sk;
        RO.set((w, m), c);
      }
