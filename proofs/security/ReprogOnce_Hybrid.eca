op is_update (m1 m2: (W * M, C)fmap) (w:W) = 
  exists m c, m1 = m2.[(w,m) <- c].

lemma is_update_set m1 m2 w k c: is_update m1 m2 w => is_update m1.[k<-c] m2.[k<-c] w.
proof.
  move=> /> m c'; case: (k = (w, m)) => [-> | ? ]; [exists m c | exists m c']; 
    apply fmap_eqP; smt(get_setE).
qed.

