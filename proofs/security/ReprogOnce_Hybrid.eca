local lemma bad &m : 
  Pr[Hij(Adv, Oij).main(i,j+1) @ &m : res] <= Pr[Hij(Adv, Oij).main(i, j) @ &m : res] + 
  Pr[Hij(Adv, Oij).main(i, j) @ &m : exists w, w \in Oi.logh /\ Oi.wo = Some w].
proof.
  byequiv (: _ ==> !(exists w, w \in Oi.logh /\ Oi.wo = Some w){2} => ={res}) => //; last first.
