lemma asint_crepr x :
  asint x = (crepr x) %% q.
proof.
rewrite /crepr /=.
case (q %/ 2 <= asint x) => _; last by smt(modz_small rg_asint).
rewrite -modzDr.
have ->: asint x - q + q = asint x by ring.
smt(modz_small rg_asint).
qed.

